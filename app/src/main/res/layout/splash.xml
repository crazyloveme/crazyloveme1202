<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redsepratorline"  xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/text_zapnabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:src="@drawable/zabnabit_white" />

    <in.pjitsol.zapnabit.Ui.CustomTextView
        android:id="@+id/text_orderpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_zapnabit"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        app:fontName="GothamBold"
        android:text="Get Local Stuff Now"
        android:textColor="@android:color/white"
        android:textSize="22dp" />

    <View
        android:id="@+id/line1"
        android:layout_below="@+id/text_orderpay"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@color/white"></View>

    <in.pjitsol.zapnabit.Ui.CustomTextView
        android:id="@+id/txtstatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        app:fontName="GothamItalic"
        android:text="Food - Restaurants - Merchandise"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <in.pjitsol.zapnabit.Ui.CustomTextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtstatic"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        app:fontName="GothamItalic"
        android:text="Home or Highway"
        android:textColor="@android:color/white"
        android:textSize="18dp" />
    <View
        android:id="@+id/line2"
        android:layout_below="@+id/home"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:background="@color/white"></View>

    <in.pjitsol.zapnabit.Ui.CustomTextView
        android:id="@+id/textmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        app:fontName="GothamItalic"
        android:text="@string/mall"
        android:textColor="@android:color/white"
        android:textSize="14dp" />
</RelativeLayout>