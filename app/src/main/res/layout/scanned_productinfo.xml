<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_productimg"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp" />

                <in.pjitsol.zapnabit.Ui.CustomTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Item name"
                    android:textColor="@color/textfonts"
                    android:textSize="15dp"
                    app:fontName="GothamMedium" />

                <in.pjitsol.zapnabit.Ui.CustomEditView
                    android:id="@+id/text_itemname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Lays"
                    android:textColor="@color/textfonts"
                    android:textSize="15dp"
                    app:fontName="GothamLight" />


                <in.pjitsol.zapnabit.Ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Price"
                    android:singleLine="true"
                    android:textColor="@color/textfonts"
                    android:textSize="15dp"

                    app:fontName="GothamMedium" />

                <in.pjitsol.zapnabit.Ui.CustomEditView
                    android:id="@+id/text_itemprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="3.80"
                    android:inputType="numberDecimal"
                    android:textColor="@color/textfonts"
                    android:textSize="15dp"
                    app:fontName="GothamLight" />


                <in.pjitsol.zapnabit.Ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Description"
                    android:textColor="@color/textfonts"
                    android:textSize="15dp"
                    app:fontName="GothamMedium" />

                <in.pjitsol.zapnabit.Ui.CustomEditView
                    android:id="@+id/text_itemDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Description"
                    android:textColor="@color/textfonts"
                    android:textSize="15dp"
                    app:fontName="GothamLight" />


                <in.pjitsol.zapnabit.Ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Category"
                    android:textColor="@color/textfonts"
                    android:textSize="15dp"
                    app:fontName="GothamMedium" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="Select Category"
                    android:imeOptions="actionNext"
                    android:layout_marginTop="5dp"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/textfonts"
                    android:textSize="15dp" />

                <!-- <in.pjitsol.zapnabit.Ui.CustomAutoCompleteTextView
                     android:id="@+id/btn_categories"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_toRightOf="@+id/view"
                     android:background="@android:color/transparent"
                     android:gravity="left|center_vertical"
                     android:drawableRight="@drawable/arrow_grey"
                     android:hint="Select Category"
                     android:imeOptions="actionNext"
                     android:padding="15dp"
                     android:singleLine="true"
                     android:textColor="@color/textfonts"
                     android:textSize="15dp"
                     app:fontName="GothamMedium" />-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/black_transparent_color"></View>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <in.pjitsol.zapnabit.Ui.CustomTextView
            android:id="@+id/text_PublishExit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lines"
            android:gravity="center"
            android:text="Publish &amp; Exit"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:fontName="GothamMedium" />

        <in.pjitsol.zapnabit.Ui.CustomTextView
            android:id="@+id/text_publishscannew"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="Publish &amp; Scan New"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:fontName="GothamMedium" />

    </LinearLayout>
</RelativeLayout>
