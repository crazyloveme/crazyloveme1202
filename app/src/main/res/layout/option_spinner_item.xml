<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <in.pjitsol.zapnabit.Ui.CustomTextView
        android:id="@+id/text_attributename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:textColor="@color/textfonts"
        android:textSize="16dp"
        app:fontName="GothamMedium"
        />
    <in.pjitsol.zapnabit.Ui.SpinnerReselect
        android:id="@+id/spinnerOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Size"
        android:imeOptions="actionNext"
        android:layout_margin="10dp"
        android:background="@drawable/spinner_background"
        android:layout_below="@+id/text_attributename"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="@color/sepratorline"
        android:textSize="13dp" />

</RelativeLayout>
