        <in.pjitsol.zapnabit.Ui.CustomTextView
            android:id="@+id/text_categoryname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/img_productimg"
            android:singleLine="true"
            android:text="Category"
            android:textColor="@color/textfonts"
            android:textSize="16dp"
            app:fontName="GothamMedium" />

        <in.pjitsol.zapnabit.Ui.CustomTextView
            android:id="@+id/text_itemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/img_arrow"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_productimg"
            android:lineSpacingExtra="3dp"
            android:text="Apetizer gsdgsd dsgsdg dsgsd ddsgsdg dsgdsg dsgdsg sdgsdg sdgdsg"
            android:textColor="@color/textfonts"
            android:textSize="14dp"
            app:fontName="GothamMedium" />

        <in.pjitsol.zapnabit.Ui.CustomTextView
            android:id="@+id/text_pricelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_itemname"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_productimg"
            android:text="Price:"
            android:textColor="@color/textfonts"
            android:textSize="15dp"
            app:fontName="GothamLight" />

        <in.pjitsol.zapnabit.Ui.CustomTextView
            android:id="@+id/text_itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_itemname"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/text_pricelabel"
            android:text="$9.00"
            android:textColor="@color/red"
            android:textSize="15dp"
            app:fontName="GothamLight" />
        <!-- </LinearLayout>-->

        <in.pjitsol.zapnabit.Ui.RoundedImageView
            android:id="@+id/img_productimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/default_image" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/arrow" />

