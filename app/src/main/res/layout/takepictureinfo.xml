<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <ImageView
        android:id="@+id/img_clickedphoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:layout_marginTop="10dp"/>

    <in.pjitsol.zapnabit.Ui.CustomTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Item name"
        android:textColor="@color/textfonts"
        android:textSize="15dp"
        app:fontName="GothamMedium"
       />

    <in.pjitsol.zapnabit.Ui.CustomEditView
        android:id="@+id/text_itemname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:maxLines="3"
        android:textColor="@color/textfonts"
        android:textSize="15dp"
        app:fontName="GothamLight"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <in.pjitsol.zapnabit.Ui.CustomTextView
            android:id="@+id/text_saveExit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:fontName="GothamMedium"
            android:background="@color/lines"
            android:text="Save &amp; Exit" />

        <in.pjitsol.zapnabit.Ui.CustomTextView
            android:id="@+id/text_savescannew"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:fontName="GothamMedium"
            android:background="@color/red"
            android:text="Save &amp; Add New" />

    </LinearLayout>

</RelativeLayout>
