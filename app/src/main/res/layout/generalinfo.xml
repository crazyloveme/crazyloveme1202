<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <in.pjitsol.zapnabit.Ui.CustomTextView
                android:id="@+id/aboutus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:gravity="center"
                android:padding="20dp"
                android:text="ABOUTS US"
                android:textColor="@color/white" />

            <in.pjitsol.zapnabit.Ui.CustomTextView
                android:id="@+id/privacypolicies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:gravity="center"
                android:padding="20dp"
                android:text="Privacy Policies"
                android:textColor="@color/white" />

            <in.pjitsol.zapnabit.Ui.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:gravity="center"
                android:padding="20dp"
                android:text="FAQs"
                android:textColor="@color/white" />

            <in.pjitsol.zapnabit.Ui.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:gravity="center"
                android:padding="20dp"
                android:text="Project: WeFunder"
                android:textColor="@color/white" />

            <in.pjitsol.zapnabit.Ui.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:gravity="center"
                android:padding="20dp"
                android:text="Project: Drone Delivery Competition"
                android:textColor="@color/white" />

            <in.pjitsol.zapnabit.Ui.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:gravity="center"
                android:padding="20dp"
                android:text="INVESTOR RELATIONS"
                android:textColor="@color/white" />

            <in.pjitsol.zapnabit.Ui.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:gravity="center"
                android:padding="20dp"
                android:text="TERMS OF USE"
                android:textColor="@color/white" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>
